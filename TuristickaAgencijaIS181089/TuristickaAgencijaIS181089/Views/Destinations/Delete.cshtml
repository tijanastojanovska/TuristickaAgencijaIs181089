@model TuristickaAgencijaIS181089.Domain.DomainModels.Destination
@using TuristickaAgencijaIS181089.Domain.DomainModels;

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
@if (ViewBag.user.Role == EnumRoles.Administrator)
{
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Destination</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DestinationName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DestinationName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DestinationCountry)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DestinationCountry)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DestinationImage)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DestinationImage)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Latitude)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Latitude)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Longitude)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Longitude)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
}
@if (ViewBag.user.Role == EnumRoles.User)
{<p>Only administrators can delete destinations</p>}