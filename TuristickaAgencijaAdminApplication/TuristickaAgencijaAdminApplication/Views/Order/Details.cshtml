@{
}

@model TuristickaAgencijaAdminApplication.Models.Order

<div class="container">

    <p>
        <a class="btn btn-success">@Model.User.UserName</a>
    </p>

    @for (int i = 0; i < Model.OrderedLines.Count(); i++)
    {
        var item = Model.OrderedLines.ElementAt(i).LineInOrder;

        if (i % 3 == 0)
        {
            @:<div class="row">
            }

            <div class="col-md-3 m-4">
                <div class="card" style="width: 18rem; height: 30rem;">
                   <div class="card-body">
                        <h3>@item.LinePrice</h3>
                        <h3>@item.StartingDestination.DestinationName</h3>
                        <h3>@item.FinalDestination.DestinationName</h3>
                        <p>@item.Company.CompanyName</p>
                    </div>

                </div>
            </div> if (i % 3 == 2)
            {
            @:</div>
        }

    }
</div>