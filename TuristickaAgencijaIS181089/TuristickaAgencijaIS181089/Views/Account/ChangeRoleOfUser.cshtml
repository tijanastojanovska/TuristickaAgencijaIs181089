@model TuristickaAgencijaIS181089.Domain.Identity.TuristickaAgencijaUser;
@using TuristickaAgencijaIS181089.Domain.DomainModels;
@using TuristickaAgencijaIS181089.Domain.DTO;
@{ ViewData["Title"] = "ChangeRoleOfUser"; }

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@


<h1>Change User Role</h1>

<form asp-action="ChangeRoleOfUser" asp-controller="Account" method="post">
    @Html.HiddenFor(m => m.Id)
    @*@Html.HiddenFor(m => m.UserName)*@
    <table class="table">
        <thead>
            <tr>
                <th>
                    Username
                </th>
                <th>
                    User role
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in ((IEnumerable<TuristickaAgencijaIS181089.Domain.Identity.TuristickaAgencijaUser>)ViewBag.users))
            {
                <tr>
                    <td>
                        @u.UserName
                    </td>
                    <td>
                        @u.Role
                    </td>
                    @*<select asp-for="@u.Role"   asp-items="Html.GetEnumSelectList<EnumRoles>()">
                               <option value="">Choose a role</option>
                        </select>*@
                <td>
                    @if (Model.Role == EnumRoles.Administrator)
                    {
                        <button type="submit" asp-route-userName="@u.UserName" class="btn btn-success">Change users role</button>
                    }</td>
                </tr>
}
        </tbody>
    </table>

    @*else
        { <p>Only administrators can change roles</p>}*@

</form>

